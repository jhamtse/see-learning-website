<body>
    <div class="game-container">
        <div class="header">
            <h1 class="title">SEE Learning Adventure</h1>
            <p class="subtitle">Help our friend stay in the Resilient Zone!</p>
        </div>

        <div class="character resilient" id="character">üòä</div>
        <div class="zone-indicator resilient-text" id="zoneText">In the Resilient Zone - Feeling Good!</div>

        <div class="scenario-container">
            <div class="scenario-text" id="scenarioText">
                Welcome! Click on our friend above to see how they're feeling. When they move out of the green Resilient Zone, use the SEE Learning tools below to help them return to balance.
            </div>
        </div>

        <div class="tools-container">
            <button class="tool-button" onclick="useBreathing()">üå¨Ô∏è Deep Breathing</button>
            <button class="tool-button" onclick="useGrounding()">üå± Grounding</button>
            <button class="tool-button" onclick="useResource()">üíù Think of Something Good</button>
            <button class="tool-button" onclick="useMovement()">üèÉ Movement Break</button>
        </div>

        <div class="breathing-circle" id="breathingCircle"></div>
        <div class="feedback" id="feedback"></div>

        <div class="progress-bar">
            <div class="progress-fill" id="progressFill"></div>
        </div>
        <div class="score" id="score">Resilience Points: 0</div>
        
        <p class="help-text">üí° Tip: When we practice these tools, we build our emotional resilience and learn to take care of ourselves and others!</p>
    </div>

    <script>
        let currentZone = 'resilient';
        let score = 0;
        let scenarios = [
            {
                text: "Oh no! Our friend just heard some loud, unexpected noises and feels startled and anxious.",
                zone: 'high',
                emotion: 'üò∞'
            },
            {
                text: "Our friend is feeling overwhelmed by too much homework and tests coming up.",
                zone: 'high',
                emotion: 'üò´'
            },
            {
                text: "It's been a long day and our friend feels tired, sad, and disconnected.",
                zone: 'low',
                emotion: 'üòî'
            },
            {
                text: "Our friend is worried about making new friends at school.",
                zone: 'high',
                emotion: 'üòü'
            },
            {
                text: "After lunch, our friend feels sleepy and unmotivated.",
                zone: 'low',
                emotion: 'üò¥'
            }
        ];

        let currentScenario = 0;

        function updateCharacter(zone, emotion) {
            const character = document.getElementById('character');
            const zoneText = document.getElementById('zoneText');
            
            character.className = `character ${zone}`;
            character.textContent = emotion;
            
            switch(zone) {
                case 'resilient':
                    zoneText.textContent = 'In the Resilient Zone - Feeling Balanced! üåü';
                    zoneText.className = 'zone-indicator resilient-text';
                    break;
                case 'high':
                    zoneText.textContent = 'In the High Zone - Feeling Anxious or Overwhelmed üî•';
                    zoneText.className = 'zone-indicator high-text';
                    break;
                case 'low':
                    zoneText.textContent = 'In the Low Zone - Feeling Tired or Disconnected üåßÔ∏è';
                    zoneText.className = 'zone-indicator low-text';
                    break;
            }
            currentZone = zone;
        }

        function showFeedback(message) {
            const feedback = document.getElementById('feedback');
            feedback.textContent = message;
            feedback.style.display = 'block';
            setTimeout(() => {
                feedback.style.display = 'none';
            }, 3000);
        }

        function updateScore(points) {
            score += points;
            document.getElementById('score').textContent = `Resilience Points: ${score}`;
            const progress = Math.min((score / 50) * 100, 100);
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function nextScenario() {
            if (currentScenario < scenarios.length) {
                const scenario = scenarios[currentScenario];
                document.getElementById('scenarioText').textContent = scenario.text;
                updateCharacter(scenario.zone, scenario.emotion);
                currentScenario++;
            } else {
                // Reset scenarios
                currentScenario = 0;
                document.getElementById('scenarioText').textContent = "Great job! You've helped our friend practice using SEE Learning tools. Click on them to start a new challenge!";
                updateCharacter('resilient', 'üòä');
            }
        }

        function useBreathing() {
            const breathingCircle = document.getElementById('breathingCircle');
            breathingCircle.style.display = 'block';
            
            setTimeout(() => {
                breathingCircle.style.display = 'none';
                if (currentZone !== 'resilient') {
                    updateCharacter('resilient', 'üòä');
                    showFeedback('Deep breathing helped calm the nervous system! üå¨Ô∏è Taking slow, deep breaths activates our body\'s relaxation response.');
                    updateScore(10);
                    setTimeout(nextScenario, 2000);
                } else {
                    showFeedback('Nice practice! Deep breathing always helps us stay centered. üßò‚Äç‚ôÄÔ∏è');
                    updateScore(5);
                }
            }, 4000);
        }

        function useGrounding() {
            if (currentZone !== 'resilient') {
                updateCharacter('resilient', 'üòä');
                showFeedback('Grounding worked! üå± Feeling our feet on the ground and noticing what supports us helps us feel safe and stable.');
                updateScore(10);
                setTimeout(nextScenario, 2000);
            } else {
                showFeedback('Great grounding practice! ü¶∂ Connecting with what supports us builds resilience.');
                updateScore(5);
            }
        }

        function useResource() {
            if (currentZone !== 'resilient') {
                updateCharacter('resilient', 'üòä');
                showFeedback('Thinking of something good helped! üíù Remembering positive people, places, or experiences helps our nervous system feel safe.');
                updateScore(10);
                setTimeout(nextScenario, 2000);
            } else {
                showFeedback('Beautiful! üåü Focusing on our resources strengthens our inner resilience.');
                updateScore(5);
            }
        }

        function useMovement() {
            const character = document.getElementById('character');
            character.style.animation = 'none';
            setTimeout(() => {
                character.style.animation = 'float 0.5s ease-in-out 4';
                if (currentZone !== 'resilient') {
                    setTimeout(() => {
                        updateCharacter('resilient', 'üòä');
                        showFeedback('Movement helped! üèÉ Physical activity helps release stress and brings us back to balance.');
                        updateScore(10);
                        setTimeout(nextScenario, 2000);
                    }, 2000);
                } else {
                    showFeedback('Great movement! üí™ Moving our body helps keep our energy balanced.');
                    updateScore(5);
                }
            }, 100);
        }

        // Click on character to trigger scenarios
        document.getElementById('character').addEventListener('click', function() {
            if (currentZone === 'resilient') {
                nextScenario();
            }
        });

        // Initialize
        document.getElementById('scenarioText').textContent = "Welcome! Click on our friend above to see how they're feeling. When they move out of the green Resilient Zone, use the SEE Learning tools below to help them return to balance.";
    </script>
</body>
</html>
